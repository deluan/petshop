  gem 'sass-rails',   '~> 3.2.3'
  gem 'bootstrap-sass', '~> 2.1.0.0'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'font-awesome-sass-rails'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

group :production do
  gem 'pg'
end
